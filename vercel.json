{
    "builds": [
      {
        "src": "./index.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/public/index.html"
      },
      {
        "source": "/_next/live",
        "destination": "/"
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' https://vercel.live; style-src 'self'; img-src 'self' data:; connect-src 'self';"
          }
        ]
      }
    ]
  }